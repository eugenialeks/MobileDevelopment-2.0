<resources>
    <!-- Primary button "Войти" -->
    <style name="Widget.SkinCare.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/sc_primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Outlined button "Гость" -->
    <style name="Widget.SkinCare.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/sc_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/sc_primary</item>
    </style>

    <!-- TextInput -->
    <style name="Widget.SkinCare.TextInput" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/sc_field_bg</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/sc_text_muted</item>
    </style>

    <style name="Widget.SkinCare.OutlinedButton.Small"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">40dp</item>
        <item name="cornerRadius">14dp</item>
        <item name="strokeColor">@color/sc_text_main</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="TextAppearance.SkinCare.ToolbarTitleBold"
        parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sc_text_main</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded18" parent="ShapeAppearanceOverlay"/>
    <style name="TitleBoldCenter" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToolbarTitle.Bold" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sc_text_main</item>
    </style>
</resources>
